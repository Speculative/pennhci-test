{
  "name": "pennhci",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ext .js,.cjs,.mjs,.astro",
    "lint:css": "stylelint \"src/**/*.{css,scss,astro}\""
  },
  "dependencies": {
    "astro": "^5.13.5",
    "marked": "^14.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.92.1",
    "stylelint": "^16.25.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write",
    "*.{js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "src/**/*.astro": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ]
  }
}
