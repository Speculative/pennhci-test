---
import Base from "../layouts/Base.astro";
import people from "../data/people.json";
import NewsContent from "../content/news.md";
import "../styles/index.scss";

import dotsSmall from "../assets/3x4bluedots.svg";
import dotsLarge from "../assets/4x7grydots.svg";
import triangleSmall from "../assets/lilredtriangle.svg";
import triangleLarge from "../assets/biggrntri.svg";
import scrollArrow from "../assets/scroll_arrow.svg";
---

<Base>
  <header class="content-width">
    <h1 class="upenn gray f-large uppercase">University of Pennsylvania</h1>
    <h1 class="hero lowercase">
      <span class="denim">Human</span><br /><span class="red">Computer</span><br
      /><span class="navy">Interaction</span>
    </h1>
    <p class="dark-gray f-large">
      Welcome to Penn HCI! Located in the University of Pennsylvania’s Computer
      and Information Science Department, our group studies a range of topics in
      Human-Computer Interaction with the goal of understanding, designing,
      engineering, and improving technologies to make a positive impact on
      individuals and communities.
    </p>
    <div class="shapes">
      <div class="dots-small"><img src={dotsSmall.src} /></div>
      <div class="dots-large"><img src={dotsLarge.src} /></div>
      <div class="triangle-small"><img src={triangleSmall.src} /></div>
      <div class="triangle-large"><img src={triangleLarge.src} /></div>
    </div>
  </header>

  <div
    class="scroll-indicator flex-col align-center justify-center margin-center"
  >
    scroll
    <div class="scroll-arrow"><img src={scrollArrow.src} /></div>
  </div>

  <hr class="content-width" />

  <section class="people">
    <div class="content-width">
      <h2 class="navy lowercase">People</h2>
      <p class="f-large">
        Penn HCI is founded and led by Assistant Professors Andrew Head and
        Danaé Metaxa.
      </p>
    </div>

    <div class="people-cards content-width flex-row">
      {
        people.map((person) => (
          <div class="profile-card">
            <img class="headshot" src={person.picture} />
            <div class="card-body flex-grow">
              <h4 class="f-large">{person.name}</h4>
              <p>
                {person.role}, {person.affiliation}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class="news">
    <div class="content-width divider">
      <hr class="white" />
    </div>

    <div class="content-width">
      <h2 class="white lowercase">News</h2>
    </div>

    <div class="news-cards content-width">
      <NewsContent />
    </div>
  </section>
</Base>
